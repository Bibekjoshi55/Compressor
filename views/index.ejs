<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Image Manager</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="min-h-screen bg-gray-700 text-gray-800">
  <%- include('partials/Navbar') %>

    <div class="max-w-6xl mx-auto p-6">
      <header class="mb-8">
        <h1 class="text-3xl font-bold text-white mb-2">Image Compressor — Upload & Manage</h1>
        <p class="text-base text-white">Supported types: <span class="font-semibold text-black-500">jpg, png, gif,
            webp</span></p>
      </header>

      <!-- Upload Card -->
      <section
        class="bg-gradient-to-br from-indigo-50 to-white rounded-2xl shadow-lg p-8 mb-8 border border-indigo-100">
        <form id="uploadForm" action="/upload" method="POST" enctype="multipart/form-data"
          class="grid grid-cols-1 md:grid-cols-3 gap-8 items-start">

          <!-- Left: file + preview -->
          <div class="md:col-span-1 flex flex-col gap-4">
            <label class="block">
              <span class="text-base font-semibold text-indigo-700">Choose image</span>
              <input id="fileInput" name="image" type="file" accept="image/*"
                class="mt-3 block w-full text-base border border-indigo-200 rounded-lg px-3 py-2 " required />
            </label>

            <div id="previewBox" class="border rounded-lg p-3 bg-indigo-50 shadow-sm">
              <div
                class="h-44 w-full flex items-center justify-center overflow-hidden bg-white rounded-lg border border-indigo-100">
                <img id="preview" alt="preview" class="max-h-44 object-contain hidden transition duration-300" />
                <span id="noPreview" class="text-base text-gray-400">No image selected</span>
              </div>
              <div id="clientMeta" class="mt-3 text-sm text-gray-700 space-y-1">
                <div><strong>Original name:</strong> <span id="metaName">—</span></div>
                <div><strong>Original size:</strong> <span id="metaSize">—</span></div>
                <div><strong>Type:</strong> <span id="metaMime">—</span></div>
              </div>
            </div>
          </div>

          <!-- Middle: optional input fields (readonly, just for metadata) -->
          <div class="md:col-span-1 space-y-4">
            <div>
              <label class="block text-base font-semibold text-indigo-700">Original Name (auto)</label>
              <input id="originalName" name="originalName" type="text" readonly
                class="mt-2 block w-full rounded-lg border-gray-200 bg-gray-100 text-base p-2" />
            </div>

            <div>
              <label class="block text-base font-semibold text-indigo-700">Original Size (bytes)</label>
              <input id="originalSize" name="originalSize" type="number" readonly
                class="mt-2 block w-full rounded-lg border-gray-200 bg-gray-100 text-base p-2" />
            </div>

            <div>
              <label class="block text-base font-semibold text-indigo-700">MIME Type</label>
              <input id="mimeType" name="mimeType" type="text" readonly
                class="mt-2 block w-full rounded-lg border-gray-200 bg-gray-100 text-base p-2" />
            </div>
          </div>

          <!-- Right: submit + target -->
          <div class="md:col-span-1 flex flex-col justify-between h-full">


            <div class="mt-6 flex flex-col items-center gap-4">

              <a href="/images/images"
                class="inline-flex items-center gap-2 px-6 py-3 rounded-xl bg-gradient-to-br from-neutral-800 via-indigo-600 to-indigo-500 text-white font-semibold shadow-lg shadow-indigo-400/30 hover:scale-105 hover:shadow-indigo-500/40 transition-all duration-300">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                  <path d="M3 7h18M3 12h18M3 17h18" />
                </svg>
                My Images
              </a>

              <button type="submit"
                class="w-full inline-flex items-center justify-center gap-2 px-6 py-3 rounded-xl bg-gradient-to-br from-indigo-700 via-indigo-600 to-indigo-500 text-white font-semibold shadow-lg shadow-indigo-400/30 hover:scale-105 hover:shadow-indigo-500/40 transition-all duration-300">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                  <path d="M4 16v2a2 2 0 002 2h12a2 2 0 002-2v-2M7 10l5 5 5-5M12 15V3"></path>
                </svg>
                Upload & Compress
              </button>

            </div>

          </div>

        </form>
      </section>

      <footer class="text-center text-sm text-gray-400 mt-8 py-4 border-t border-indigo-100">
        <span class="font-semibold text-indigo-500">Schema fields shown:</span> user, originalName, originalSize,
        compressedSize, mimeType, originalPath, compressedPath, compressionRatio, uploadedAt.
      </footer>
    </div>


    <script>
      const fileInput = document.getElementById('fileInput');
      const preview = document.getElementById('preview');
      const noPreview = document.getElementById('noPreview');
      const metaName = document.getElementById('metaName');
      const metaSize = document.getElementById('metaSize');
      const metaMime = document.getElementById('metaMime');

      const originalName = document.getElementById('originalName');
      const originalSize = document.getElementById('originalSize');
      const mimeType = document.getElementById('mimeType');

      fileInput.addEventListener('change', (e) => {
        const file = e.target.files && e.target.files[0];
        if (!file) {
          preview.src = '';
          preview.classList.add('hidden');
          noPreview.classList.remove('hidden');
          metaName.textContent = '—';
          metaSize.textContent = '—';
          metaMime.textContent = '—';
          originalName.value = '';
          originalSize.value = '';
          mimeType.value = '';
          return;
        }

        const url = URL.createObjectURL(file);
        preview.src = url;
        preview.onload = () => URL.revokeObjectURL(url);
        preview.classList.remove('hidden');
        noPreview.classList.add('hidden');

        metaName.textContent = file.name;
        metaSize.textContent = file.size + ' B';
        metaMime.textContent = file.type || 'unknown';

        originalName.value = file.name;
        originalSize.value = file.size;
        mimeType.value = file.type || '';
      });
    </script>
</body>

</html>